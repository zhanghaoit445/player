<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <View android:id="@+id/wieghtView" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
         android:layout_weight="1.0" />
    <LinearLayout android:layout_width="wrap_content"
         android:layout_height="fill_parent">
        <ImageView android:layout_gravity="right|center" 
            android:id="@+id/playList" 
            android:background="@drawable/btn_playlist_unfold" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:src="@drawable/ico_playlist_fold" 
            />
    </LinearLayout>
    <ListView android:layout_gravity="right" 
        android:id="@+id/playList" 
        android:background="@color/control_back"
         android:layout_width="200.0dip" 
         android:layout_height="fill_parent" 
         />
</LinearLayout>
